<?xml version="1.0" encoding="utf-8"?>

<widget xmlns="http://www.w3.org/ns/widgets"
        id="http://www.example.org/helloworld"
        viewmodes="minimized"
        version="0.3">
    <name>Youtube on speeddial</name>
    <description>Shows videos from Youtube subscriptions on speeddial</description>
    <author email="demalexx@gmail.com">demalexx</author>
    <icon src="icons/extension-icon.png" />

    <feature name="opera:speeddial" required="true">
        <param name="url" value="http://www.youtube.com/feed/subscriptions" />
    </feature>
    <access origin="*" />
    <feature name="opera:share-cookies" required="true" />
</widget>